PORT=8787
APP_ENV=production
# 本地开发用 local；生产部署用 production
STORAGE_MODE=oss
APP_ORIGIN=https://your-domain.com
ADMIN_BOOTSTRAP_KEY=your-admin-bootstrap-key
REPORT_TIMEZONE=Asia/Shanghai
DB_PATH=./data/qrai.sqlite
LOCAL_STORAGE_PATH=./data/files
OSS_REGION=oss-cn-hangzhou
OSS_ENDPOINT=oss-cn-hangzhou.aliyuncs.com
OSS_BUCKET=your-oss-bucket
OSS_ACCESS_KEY_ID=your-oss-access-key-id
OSS_ACCESS_KEY_SECRET=your-oss-access-key-secret
# 资源占用优化（2C2G 推荐）
NODE_OPTIONS=--max-old-space-size=768
REPORT_CONCURRENCY=1
EMBEDDING_CACHE_MAX=2000
EMBEDDING_CACHE_TTL_MS=21600000
CONTEXT_STAGE_DELAY_MS=0
